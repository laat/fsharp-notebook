{
  "name": "fsharp-notebook",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write",
    "*.{fs,fsx,fsi,ml,mli}": "dotnet fantomas"
  },
  "scripts": {
    "prepare": "husky install && dotnet tool restore",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier \"**/*\" --ignore-unknown --check",
    "lint:fantomas": "dotnet fantomas . --check",
    "lint-fix": "run-s lint-fix:*",
    "lint-fix:prettier": "prettier \"**/*\" --ignore-unknown --write",
    "lint-fix:fantomas": "dotnet fantomas ."
  }
}
